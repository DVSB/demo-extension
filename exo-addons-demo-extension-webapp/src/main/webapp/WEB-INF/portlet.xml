<?xml version="1.0" encoding="UTF-8"?>
<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
             version="2.0"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd
   http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd">
   <portlet>
     <portlet-name>PopulatorApplication</portlet-name>
     <display-name xml:lang="EN">Populator Application</display-name>
     <portlet-class>org.exoplatform.addons.populator.portlet.populator.PopulatorPortlet</portlet-class>
     <init-param>
       <name>juzu.run_mode</name>
       <value>prod</value>
     </init-param>
     <supports>
       <mime-type>text/html</mime-type>
     </supports>
     <portlet-info>
       <title>Populator</title>
       <short-title>Populator</short-title>
       <keywords>Content</keywords>
     </portlet-info>
     <portlet-preferences>
       <preference>
         <name>username</name>
         <value>benjamin</value>
         <read-only>false</read-only>
       </preference>
       <preference>
         <name>fullname</name>
         <value>Benjamin Paillereau</value>
         <read-only>false</read-only>
       </preference>
     </portlet-preferences>
   </portlet>

   <portlet>
     <portlet-name>RssApplication</portlet-name>
     <display-name xml:lang="EN">Rss Application</display-name>
     <portlet-class>org.exoplatform.addons.populator.portlet.rss.RssPortlet</portlet-class>
     <init-param>
       <name>juzu.run_mode</name>
       <value>prod</value>
     </init-param>
     <expiration-cache>0</expiration-cache>
     <supports>
       <mime-type>text/html</mime-type>
     </supports>
     <portlet-info>
       <title>Rss</title>
       <short-title>Rss</short-title>
       <keywords>Content</keywords>
     </portlet-info>
     <portlet-preferences>
       <preference>
         <name>url</name>
         <value>http://blog.exoplatform.com/en/feed</value>
         <read-only>false</read-only>
       </preference>
       <preference>
         <name>size</name>
         <value>5</value>
         <read-only>false</read-only>
       </preference>
       <preference>
         <name>cache</name>
         <value>300</value>
         <read-only>false</read-only>
       </preference>
     </portlet-preferences>
   </portlet>

   <portlet>
     <portlet-name>TodoApplication</portlet-name>
     <display-name xml:lang="EN">Todo Application</display-name>
     <portlet-class>org.exoplatform.addons.populator.portlet.todo.TodoPortlet</portlet-class>
     <init-param>
       <name>juzu.run_mode</name>
       <value>prod</value>
     </init-param>
     <expiration-cache>0</expiration-cache>
     <supports>
       <mime-type>text/html</mime-type>
     </supports>
     <portlet-info>
       <title>Todo</title>
       <short-title>Todo</short-title>
       <keywords>Content</keywords>
     </portlet-info>
   </portlet>

   <portlet>
     <portlet-name>ResponsiveApplication</portlet-name>
     <display-name xml:lang="EN">Responsive Application</display-name>
     <portlet-class>org.exoplatform.addons.populator.portlet.responsive.ResponsivePortlet</portlet-class>
     <init-param>
       <name>juzu.run_mode</name>
       <value>prod</value>
     </init-param>
     <expiration-cache>0</expiration-cache>
     <supports>
       <mime-type>text/html</mime-type>
     </supports>
     <portlet-info>
       <title>Responsive</title>
       <short-title>Responsive</short-title>
       <keywords>Content</keywords>
     </portlet-info>
   </portlet>

</portlet-app>